extends layout
block content
  h1 Search
  form(action='/search', method='get')
    input(name='keywords', placeholder='Search for collections, modules, users and more')
  if search
    if search.results.length
      for result in search.results
        div(class='result')
          div(class='type')= result.type
          div(class='name')= result.name
          div!= 'by <a href="user/' + result.user + '">' + result.user + '</a>'
    else
      div No results found.