extends layout
block content
  h2 Crystal Registry
  h3 Find Collections, Modules, Users and more
  form(action='/registry', method='get')
    input(name='keywords', placeholder='Example: express, wordpress.zerif-lite, authors.core', value=keywords)
  if search
    if search.results.length
      h3= search.results.length + ' results found.'
      for result in search.results
        div(class='result')
          div(class='type')= result.type
          div(class='name')
            a(href='/registry/' + result.name)= result.name
          div!= 'by <a href="user/' + result.user + '">' + result.user + '</a>'
    else
      div No results found.