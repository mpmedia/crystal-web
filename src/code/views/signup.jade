extends layout

block content
  section(class='page', id='signup')
    h1 signup
    form(action='#', onsubmit='return signup()')
      p signup to publish your generators
      p(class='error')
      p
        label(for='email') Email
        input(name='email', placeholder='email')
      p
        label(for='username') Username
        input(name='username', placeholder='username')
      p
        label(for='password') Password
        input(name='password', placeholder='password', type='password')
      p
        button(type='submit') Sign Up
    div(id='success')
      h2 success!
      p thanks for signing up. you can now publish your generators to the crystal registry using your new login:
      code crystal publish